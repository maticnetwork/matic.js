{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": ["es2015", "dom"],
    "target": "es5",
    "rootDir": "src",
    "outDir": "lib",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib"
  ]
}
